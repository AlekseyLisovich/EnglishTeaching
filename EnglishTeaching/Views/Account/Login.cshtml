@model EnglishTeaching.Models.Account.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>
<br/>
<form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group col-md-12">
            <label asp-for="Email" class="col-md-2 control-label">Enter Email</label>
            <div class="col-md-4">
                <input type="text" class="form-control" asp-for="Email" />
                <span asp-validation-for="Email" />
            </div>
        </div>
        <br/>
        <div class="form-group col-md-12">
            <label asp-for="Password" class="col-md-2 control-label">Enter Password</label>
            <div class="col-md-4">
                <input class="form-control" asp-for="Password" />
                <span asp-validation-for="Password" />
            </div>
        </div>
        <div class="form-group">
            <input type="submit" value="SingIn" class="btn btn-success" />
            <a asp-action="Register" asp-controller="Account" class="btn btn-default">Sing Up</a>
        </div>
    </div>
</form>

